<template>
  <form @submit.prevent="onSubmit" class="w-full max-w-md mx-auto p-4 bg-white rounded shadow">
    <label class="block mb-2">Name:</label>
    <input v-model="form.name" name="name" class="w-full border p-2 mb-4 rounded" />
    <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded">Save</button>
  </form>
</template>
<script>
export default {
  name: '<%= entityName %>Form',
  data() {
    return {
      form: { name: '' },
    };
  },
  methods: {
    onSubmit() {
      this.$emit('submit', this.form);
    },
  },
};
</script>
