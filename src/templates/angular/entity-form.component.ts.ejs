import { Component, Output, EventEmitter } from '@angular/core';

@Component({
  selector: 'entity-form',
  template: `
    <form (ngSubmit)="onSubmit()" class="w-full max-w-md mx-auto p-4 bg-white rounded shadow">
      <label class="block mb-2">Name:</label>
      <input [(ngModel)]="form.name" name="name" class="w-full border p-2 mb-4 rounded" />
      <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded">Save</button>
    </form>
  `
})
export class <%= entityName %>FormComponent {
  form = { name: '' };
  @Output() submit = new EventEmitter<any>();

  onSubmit() {
    this.submit.emit(this.form);
  }
}
